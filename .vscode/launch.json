{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug API Server",
      "type": "python",
      "request": "launch",
      "module": "secure_mpc_transformer.server",
      "args": ["--debug", "--port", "8080"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "development",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug MPC Party",
      "type": "python",
      "request": "launch",
      "module": "secure_mpc_transformer.party",
      "args": ["--party-id", "0", "--debug"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "development",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Main Demo",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "args": ["--debug"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "development",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v", "--tb=short"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "testing",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Specific Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "--tb=short"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "testing",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Benchmark",
      "type": "python",
      "request": "launch",
      "module": "secure_mpc_transformer.benchmark",
      "args": ["--debug", "--quick"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "development",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Security Audit",
      "type": "python",
      "request": "launch",
      "module": "secure_mpc_transformer.security.audit",
      "args": ["--debug"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "development",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    },
    {
      "name": "Debug Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "MPC_ENVIRONMENT": "development",
        "MPC_DEBUG": "true",
        "MPC_LOG_LEVEL": "DEBUG",
        "PYTHONPATH": "${workspaceFolder}/src"
      }
    }
  ]
}
